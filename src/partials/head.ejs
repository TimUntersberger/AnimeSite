<style>
  body{
    background-color: #333333;
    padding: 0;
    margin: 0;
  }

  .search-btn{
    display: inline-block;
    height: 38px;
    width: 38px;
    color: white;
    border: none;
    background-color: rgba(0,0,0,0);
    cursor: pointer;
  }

  .search-btn:hover{
    border: 1px solid white;
  }

  .search-field{
    border-radius: 0;
    background-color: rgba(0,0,0,0) !important;
    color: white !important;
    border: none;
    border-bottom: 1px solid white;
  }

  .search-form{
    margin-left: auto;
