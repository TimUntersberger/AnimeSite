<!doctype html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <style>
      .btn {border-radius: 0;}
      .home-image{
        max-height: 100vh;
        width: 100vw;
      }
      .navbar{
        background-color: rgba(255, 255, 255, .1) !important;
      }
      .watch-btn{
        position: absolute;
        margin-top: -25%;
        margin-left: calc(50% - 60px);
      }

    </style>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100 home-image" src="static/images/home.png" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100 home-image" src="static/images/home2.png" alt="Second slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <button class="btn btn-outline-light btn-lg watch-btn" onclick="window.location.href = '/shows'">WATCH NOW</button>
  </body>
</html>