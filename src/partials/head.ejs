  }

  #navbar:hover{
    background-color: rgba(51,51,51,0.5) !important;
  }

  main {
    margin-top: 55px;
    padding: 20px;
    min-height: calc(100vh - 95px);
    max-height: calc(100vh - 95px);
  }
  main * {
    max-height: calc(100vh - 95px);
  }

  main.full {
    min-height: 100vh;
    max-height: 100vh;
    padding: 0;
    margin: 0;
  }

  main.full *{
    max-height: 100vh;
  }

